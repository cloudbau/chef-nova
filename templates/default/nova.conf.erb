allow_same_net_traffic=<%= @allow_same_net_traffic %>
osapi_max_limit=<%= @osapi_max_limit %>
snapshot_image_format=<%= @snapshot_image_format %>
start_guests_on_host_boot=<%= @start_guests_on_host_boot %>
